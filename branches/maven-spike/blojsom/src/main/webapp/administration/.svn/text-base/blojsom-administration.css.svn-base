/* ----------------------------------------------------------------- */
/* CSS AND DESIGN BY smallTransport.com                              */
/* v3.5 by anothercaffeinatedday.com                                 */
/* ----------------------------------------------------------------- */

/* -- v3.5 -- */

html {
    background-color: #F8FBFC;
}

#doc3 {
    position: relative;
    margin: 0 auto;
    font-family: "Lucida Grande", "Trebuchet MS", Verdana;
}

div#errStatus {
    position: fixed;
    bottom: 0px;
    z-index:100;
    width: 100%;
    height: 0px;
    overflow: hidden;
    border-bottom: 1px #92a9ba solid;
    background: #ffe13e;
}

div#operation_result {
    margin: 0;
    padding: .5em 1em .5em 32px;
    background: url(images/statusBg.gif) repeat-x top #ffe13e;
    color: #000000;
}

div#operation_result span.error {
    padding-left: 24px;
    background: url(images/cross.png) no-repeat 0 50%;
}

div#operation_result span.tick {
    padding-left: 24px;
    background: url(images/tick.png) no-repeat 0 50%;
}

div#operation_result span.deleted {
    padding-left: 24px;
    background: url(images/delete.png) no-repeat 0 50%;
}

div#operation_result span.warn {
    padding-left: 24px;
    background: url(images/error.png) no-repeat 0 50%;
}

div#operation_result dl dd { display: inline; }

div#hd {
    position: relative;
    height: 111px;
    padding-top: 8px;
}

#doc3 div#bd {
    margin: 2em 0 auto 2em;
}

div.stdotcom {
    margin: 0 auto 2em;
    border: 3px double #92a9ba;
    background: #fff;
    padding: 1em;
}

div.login {
    width: 22.25em;
    margin: 0 auto;
    border: 3px double #92a9ba;
    background: #fff;
    padding: 2em;
}

div.login div { margin-left: 6em; }

div.login ul {
    margin: 1em 0;
}

div.login li {
    position: relative;
    margin: 1em 0;
    list-style-type: none;
}

div.login label {
    position:absolute;
    width: 6em;
    left: -7em;
    padding-top: 3px;
    text-align: right;
}

div.login input {
}

.metalink {
    display: inline-block;
    min-height: 2em;
    line-height: 2;
    vertical-align: text-bottom;
    padding: 1px 0;
    font-size: 85%;
}

div#navmenu {
    position:absolute;
    top: 90px;
    height: 28px;
    margin: 0 0 0 1.5em;
}

fieldset h1, fieldset h2, fieldset h3, fieldset h4 {
    border: none;
}

/* -- legacy -- */
body {
    margin: 0;
    background: url(images/blojsom-bg.gif) repeat-x #F8FBFC;
}

a:link {
    color:#D41B2A;
    text-decoration:none;
}

a:hover { 
    text-decoration: underline;
}

br {
    clear:both;
}

h1 {
    width:224px;
    height:0;
    overflow: hidden;
    margin:0 0 3px;
    padding-top: 79px;
    background: url(images/blojsom-logo.gif) no-repeat top left;
}


h2 {
    clear: left;
    margin-top: 0;
    font-size:200%;
    font-weight: normal;
}

h3 {
    margin:0 0 10px 0;
    border-bottom: 1px dashed #A4AEB2;
    padding:0 0 10px 0;
    color:#3C657B;
    font-size: 131%;
    font-weight: normal;
}

h3 span.add-new-entry {
    padding-left: 24px;
    background: url(images/add.png) no-repeat left center;
    font-size: 85%;
    margin-left: 1em;
    padding-left: 24px;
    line-height: 1.6;
}

h4 {
    margin:0 0 10px 0;
    padding:0;
    font-size: 108%;
    font-weight: normal;
    color:#584E37;
}

p {
    margin:10px 0;
    color:#333;
}


/* ----------------------------------------------------------------- */
/* LOGIN BOX */
/* ----------------------------------------------------------------- */

div#login {
    position: absolute;
    top: 1em;
    right: 1.05em;
    width: 250px;
    padding: 0 10px;
    border: 1px solid #C9D6D6;
    background-color: #fff;
    color:#fff;
}

/* ----------------------------------------------------------------- */
/* MAIN CONTENT AREAS */
/* ----------------------------------------------------------------- */
div#main {
    margin: 30px 20px;
}

div#header {
    margin:0 20px;
}

div#contents {
    float: left;
    width:65%;
}

div.desc {
    margin:0 0 20px 0;
}

table th {
    font-size: 85%;
    color:#fff;
    background-color: #ADAE8C;
    font-weight: bold;
    text-align: left;
    padding:5px 0 5px 5px;
}

tr.on { background-color: #F0F0EA; }

tr.off { background-color: #ffffff; }

th, td { border: none; }

form input.small {
    width:100px;
}

/* ----------------------------------------------------------------- */
/* SIDEBAR */
/* ----------------------------------------------------------------- */

#sidebar {
    width: 84.3%;
    margin: 0 auto 2em;
    border: 1px solid #ADAE8C;
    background-color: #F5F9DE;
    padding: 10px;
}
