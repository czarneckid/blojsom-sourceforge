<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0     http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- The Basics -->
    <groupId>org.blojsom</groupId>
    <artifactId>blojsom-library</artifactId>
    <version>3.5-SNAPSHOT</version>
    <packaging>pom</packaging>
    <modules>
        <module>../blojsom-api</module>
        <module>../blojsom-pojos</module>
        <module>../blojsom-core</module>
        <module>../blojsom-extensions</module>
        <module>../blojsom-plugins</module>
    </modules>
    <parent>
        <groupId>org.blojsom</groupId>
        <artifactId>blojsom-maven</artifactId>
        <version>3.5-SNAPSHOT</version>
    </parent>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>1.8.5</version>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>5.13.1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <properties>
        <groovy.version>1.0</groovy.version>
        <commons-logging.version>1.0.4</commons-logging.version>
        <org.hibernate.version>3.1.3</org.hibernate.version>
        <org.slf4j.version>1.3.0</org.slf4j.version>
        <velocity.version>1.6.2</velocity.version>
        <servlet-api.version>2.5</servlet-api.version>
        <metrics.exclude>true</metrics.exclude>
    </properties>
    <!-- More Project Information -->
    <name>blojsom Library Parent POM</name>
    <description>Global configuration for blojsom application code.</description>
    <!-- Environment Settings -->
    <profiles>
        <profile>
            <id>addons</id>
            <modules>
                <module>../blojsom-addon-plugins</module>
                <module>../blojsom-addon-core</module>
            </modules>
        </profile>
        <profile>
            <id>docs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <quiet>true</quiet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
        <profile>
            <id>metrics</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-checkstyle-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>blojsom-metrics</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>check</goal>
                                </goals>
                                <configuration>
                                    <configLocation>blojsom-checkstyle.xml</configLocation>
                                    <failOnViolation>false</failOnViolation>
                                    <skip>${metrics.exclude}</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-pmd-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>check</goal>
                                    <goal>cpd-check</goal>
                                </goals>
                                <configuration>
                                    <failOnViolation>false</failOnViolation>
                                    <skip>${metrics.exclude}</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-checkstyle-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-pmd-plugin</artifactId>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
    </profiles>
</project>
