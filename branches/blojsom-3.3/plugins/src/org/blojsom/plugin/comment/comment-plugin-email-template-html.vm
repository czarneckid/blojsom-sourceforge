#FriendlyPermalink($BLOJSOM_COMMENT_PLUGIN_BLOG_ENTRY)
<html>
    <head></head>

    <body>
        <p>
            <strong>Comment Details</strong>
            <br />
            <br />
            Comment on: <a href="$entryLink">$BLOJSOM_COMMENT_PLUGIN_BLOG_ENTRY.getTitle()</a>
            <br />
            Comment by: <a href="mailto:$!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getAuthorEmail()">$!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getAuthor()</a> - $!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getAuthorURL()
            <br />
            Left on: $!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getCommentDate()
            <br />
            IP Address: $!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getIp()
            <br />
            Status: $!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getStatus()
        </p>
        <p>
            <strong>Comment Administration</strong>
            <br />
            <br />
            <a href="#BlogAdminURL()/?flavor=admin&action=approve-blog-comments&plugins=edit-blog-entries&blog-entry-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getEntry().getId()&blog-comment-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getId()">Approve</a> this comment <br  />
            <a href="#BlogAdminURL()/?flavor=admin&action=delete-blog-comments&plugins=edit-blog-entries&blog-entry-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getEntry().getId()&blog-comment-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getId()">Delete</a> comment <br />
            <a href="#BlogAdminURL()/?flavor=admin&action=edit-blog-entry&plugins=edit-blog-entries&blog-category-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getEntry().getBlogCategory().getId()&blog-entry-id=$BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getEntry().getId()">Edit</a> entry <br />
        </p>
        <p>
            <strong>Comment</strong>
            <br />
            <br />
            $!BLOJSOM_COMMENT_PLUGIN_BLOG_COMMENT.getComment()
        </p>
    </body>
</html>