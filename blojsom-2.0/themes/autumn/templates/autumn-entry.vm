#friendlyPermalink($entry)

<div class="entry">

	<h3><a href="$entryLink" title="$entry.getTitle()">$entry.getTitle()</a></h3>
	<p>
		$entry.getDescription()
	</p>
	<p class="info">
		<span>Posted by #Author($entry) on #FormatDate($entry 'EEE, d MMM yyyy HH:mm')</span>
		<br/>
		<a href="$entryLink" title="Permalink">Permalink</a>
		-
		Category <a href="$entry.getBlogCategory().getCategoryURL()" title="$entry.getBlogCategory().getCategory()">#CategoryName($entry.getBlogCategory())</a>
		
        #CommentsAllowed($entry)
		#if ($commentsAllowed)- <span><a href="$entryLink?page=comments">$entry.getNumComments()</a> Comments</span>#end

        #TrackbacksAllowed($entry)
		#if ($trackbacksAllowed)- <span><a href="$entryLink?page=trackback">$entry.getNumTrackbacks()</a> Trackbacks</span>#end

	</p>

	#TrackbackAutoDiscovery($entry false)
</div>
<hr/>